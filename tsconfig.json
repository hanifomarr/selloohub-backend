{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "rootDir": "src",
    "baseUrl": "./",
    "outDir": "dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*", "config"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"]
}
